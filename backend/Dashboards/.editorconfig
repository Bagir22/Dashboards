# .editorconfig для C#
root = true

[*.cs]
csharp_style_namespace_declarations = block_scoped:suggestion

# Основные отступы и табуляция
indent_style = space
indent_size = 4
tab_width = 4
insert_final_newline = true
charset = utf-8

# Пробелы
csharp_space_after_cast = false
csharp_space_after_colon_in_inheritance_clause = true
csharp_space_after_keywords_in_control_flow_statements = true
csharp_space_after_comma = true
csharp_space_after_dot = false
csharp_space_after_method_call_name = false
csharp_space_after_method_declaration_name = false
csharp_space_after_semicolon_in_for_statement = true
csharp_space_around_binary_operators = ignore
csharp_space_before_colon_in_inheritance_clause = false
csharp_space_before_comma = false
csharp_space_before_open_square_brackets = false
csharp_space_within_expression_parentheses = true
csharp_space_within_method_call_parentheses = true
csharp_space_within_method_declaration_parentheses = true
csharp_space_between_empty_method_call_parentheses = false
csharp_space_between_empty_method_declaration_parentheses = false
csharp_space_within_other_parentheses = true
csharp_space_within_square_brackets = true